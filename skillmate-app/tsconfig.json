{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    /* ✨ ADD THESE TWO LINES ✨ */
    "baseUrl": ".",                     // path resolution is now rooted here
    "paths": { "@/*": ["./*"] },         // "@/lib/auth" → "./lib/auth"
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/lib/auth-file.ts  "  ],
  "exclude": [
    "node_modules"
  ]
}
